<div class="error_m">
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
</div>


<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <%= link_to 'Show',book_path(@book.id) %>
  <%= link_to "Back",books_path %>
<% end %>